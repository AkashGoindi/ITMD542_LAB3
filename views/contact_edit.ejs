<!DOCTYPE html>
<html>
  <head>
    <title>Directory | Akash Goindi</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    
    <div class="container">
    <h2><%= pageTitle %></h2>
    <br />

      <% if (errors) { %>
          <% errors.forEach(function(err){ %>
            <div class="alert alert-danger" role="alert">
              <%= err.msg  %>
            </div>
          <% }); %>
      <% } %>

      <form 
        class="mb-4"
        action="/edit/<%= data.id %>" method="POST"
        style="box-shadow:0px 0px 6px #cacaca; border-radius: 12px; padding: 24px">
        <div class="mb-3">
          <label for="firstName" class="form-label">First Name</label>
          <input 
            required
            type="text" 
            class="form-control" 
            name="firstName" 
            id="firstName"
            placeholder="John" 
            value=<%= data.firstName %>
          >
        </div>
        <div class="mb-3">
          <label for="lastName" class="form-label">Last Name</label>
          <input 
            required
            type="text" 
            class="form-control" 
            name="lastName" 
            id="lastName" 
            placeholder="Doe"
            value=<%= data.lastName %>
          >
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input 
            type="text" 
            class="form-control" 
            name="email" 
            id="email" 
            placeholder="johndoe@gmail.com"
            value=<%= data.email %>
          >
        </div>
        <div class="mb-3">
          <label for="notes" class="form-label">Example textarea</label>
          <textarea 
            class="form-control" 
            id="notes" 
            name="notes" 
            rows="3" 
            placeholder="Start typing..."><%= data.notes %></textarea>
        </div>
        <button class="btn w-100 btn-md btn-dark" type="submit">Submit</button>
      </form>
      
      <div class="d-flex justify-content-end">
        <a class="btn btn-sm btn-outline-dark" href="/contact/<%= data.id %>">Go Back</a>
      </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
  </body>
</html>

