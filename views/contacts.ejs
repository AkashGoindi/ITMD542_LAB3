<!DOCTYPE html>
<html>
  <head>
    <title>Directory | Akash Goindi</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    
    <div class="container">
      <h2><%= pageTitle %></h2>
      <a href="/add" class="btn btn-sm btn-dark">+ Add New</a>
      <hr />
        <% if (contacts.length) { %>
          <p style="text-align: right">Showing <%= contacts.length %> Contacts</p>
          <div class="row">
            <% contacts.forEach(function(element){ %>
              <div class="col-12 col-lg-4 col-md-2 mb-4">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title"><%= element.getName() %></h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= element.email %></h6>
                    <a href="/contact/<%= element.id %>" class="btn btn-sm btn-dark">View Contact</a>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <p>0 contacts found. Click on "Add New" button to start adding contacts.</p>
        <% } %>

        <div class="d-flex justify-content-end">
          <a class="btn btn-sm btn-outline-dark" href="/">Go Home</a>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
  </body>
</html>
